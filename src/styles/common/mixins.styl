/* =============================================================================
    Clear fix
============================================================================= */

clear()
    zoom: 1

    &:before, &:after
        content " "
        display table

    &:after
        clear both

/* =============================================================================
    Hide elements
============================================================================= */

hidden()
    display none

outside()
    position absolute
    left -9999px
    top -9999px

invisible()
    visibility hidden
    
active-show($display = block)
    display none

    &.active
        display $display

/* =============================================================================
    Wrap options
============================================================================= */

nowrap()
    white-space nowrap

/* =============================================================================
    Links styles
============================================================================= */

js-link()
    text-decoration none

    span
        display inline
        border-bottom 1px dashed

    &:hover span
        border-color transparent

info-link()
    text-decoration none
    cursor help

    span
        display inline
        border-bottom 1px dotted

    &:hover span
        border-color transparent

iconed-link()
    text-decoration none

    span
        text-decoration underline

    &:hover
        text-decoration none
  
/* =============================================================================
    Icons
============================================================================= */

[class*="icon-"]
    display inline-block
    content ''
    line-height inherit
    vertical-align middle

/* =============================================================================
    Colors & gradients
============================================================================= */

gradient($startColor = #eee, $endColor = white)
    background linear-gradient(to bottom, $startColor, $endColor)

h-gradient($startColor = #eee, $endColor = white)
    background linear-gradient(to right, $startColor, $endColor)

/* =============================================================================
    Shadows
============================================================================= */

box-shadow($arguments = 1px 1px 1px rgba(#000, .15))
    box-shadow $arguments

text-shadow($arguments = 0 1px 1px rgba(#000, .25))
    text-shadow $arguments

/* =============================================================================
    Sprite
============================================================================= */

sprite-icon()
    display inline-block
    content ''
    vertical-align middle
    line-height inherit

spriteWidth($sprite) {
    width: $sprite[4];
}

spriteHeight($sprite) {
    height: $sprite[5];
}

spritePosition($sprite) {
    background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
    background-image: url($sprite[8]);
}

sprite($sprite) {
    sprite-icon()
    spriteImage($sprite)
    spritePosition($sprite)
    spriteWidth($sprite)
    spriteHeight($sprite)
}

/* =============================================================================
    Responsive design
============================================================================= */

resp($width = $l-wide)
    media = 'all and (max-width: %s)' % $width
    @media media
        {block}
