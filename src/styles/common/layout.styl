/* =============================================================================
    Main layout
============================================================================= */

html
body
    height 100%

body
    box-sizing border-box
    position relative
    background $color-bg
    
.container
    box-sizing border-box
    width 960px
    margin 0 auto
    
    +resp($l-tablet)
        width $l-tablet
        
    +resp($l-phone)
        width $l-phone
        
    +resp($l-small-phone)
        width $l-small-phone
